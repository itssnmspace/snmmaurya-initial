<%= render 'shared/header_title', header_title: "Questions", header_sub_title: "Questions related to #{@topic.title}" %>

<%= render "shared/solution_anchors" %>
<!-- Intro Content -->
<div class="row">
  <div class="col-sm-8">
    <%= form_for [:topic, @problem] do |form| %>
     <fieldset class="form-group">
      <%= form.label "Related To Language", for: "topic" %>
      <%= form.select :topic_id, Topic.topic_options, {:include_blank => "Select a Category"}, {:class => "form-control"} %>
    </fieldset>

    <fieldset class="form-group">
      <%= form.label "Query", for: "Query" %>
      <%= form.text_area :title, class: "form-control", placeholder: "Query...." %>
    </fieldset>

    <button type="submit" class="btn btn-primary">Query</button>
    <% end %>
  </div>
</div>