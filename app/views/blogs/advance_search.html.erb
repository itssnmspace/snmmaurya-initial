<div class="modal-header">
  <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
  <h3 class="modal-title text-center">Blog Advance Search</h4>
</div>
<div class="modal-body">

<%= form_tag blogs_path, method: :get do |form| %>
  <fieldset class="form-group">
    <%= label_tag :Title %>
    <%= text_field_tag :search, nil, class: "form-control" %>
  </fieldset>

  <fieldset class="form-group">
    <%= label_tag :description %>
    <%= text_area_tag :description, nil, class: "form-control" %>
  </fieldset>

  <fieldset class="form-group">
    <%= label_tag :user %>
    <%= select_tag :user_id, options_for_select(User.user_options), class: "form-control" %>
  </fieldset>

  <fieldset class="form-group">
    <%= check_box_tag :featured %>
    <%= label_tag :featured %>
  </fieldset>

  <fieldset class="form-group">
    <div class="row">
      <div class="col-md-6">
        <%= label_tag :from %>
        <%= text_field_tag :date_from, nil, class: "form-control" %>
      </div>
      <div class="col-md-6">
        <%= label_tag :from %>
        <%= text_field_tag :date_to, nil, class: "form-control" %>
      </div>
    </div>
  </fieldset>

  <div class="actions">
    <%= submit_tag "Advance Search", class: "btn btn-primary width-hundred-percent" %>
  </div>

<% end %>

</div>
<div class="modal-footer">
  <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
</div>