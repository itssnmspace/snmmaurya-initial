<%= render 'shared/header_title', header_title: "Blogs", header_sub_title: "Blog a post and comment system!" %>

<!-- Intro Content -->
<div class="row">
  <% if @blogs.present? %>
    <% @blogs.each do |blog| %>
      <div class="col-sm-12">
        <p>
          <p><h3><%= blog.title %></h3>
          <%= truncate(blog.description, length: 250) %></p>
          <div class="col-sm-12 text-right">
          <%= link_to "View More", blog_path(blog) %> |
          <% if can? :update, blog %>
            <%= link_to "Edit", edit_blog_path(blog) %> |
          <% end %>
          <% if can? :destroy, blog %>
            <%= link_to "Destroy", blog_path(blog), method: :destroy, data: {confirmation: "Are you sure?"} %> | 
          <% end %>
          By <%= link_to blog.user.try(:username), "#" %>
          </div>
        </p>
        <hr>
      </div>
    <% end %>
  <% else %>
    <%= render "shared/search_not_found" %>
  <% end %>

</div>