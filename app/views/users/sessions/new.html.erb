<div class="modal-header">
  <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
  <h3 class="modal-title text-center">SIGN IN</h4>
</div>
<div class="modal-body">
<div class="error"></div>
<%= form_for(resource, as: resource_name, url: session_path(resource_name), remote: true) do |form| %>
  <fieldset class="form-group">
    <%= form.label :email %><br />
    <%= form.email_field :email, autofocus: true, class: "form-control" %>
  </fieldset>

  <fieldset class="form-group">
    <%= form.label :password %><br />
    <%= form.password_field :password, autocomplete: "off", class: "form-control" %>
  </fieldset>

  <% if devise_mapping.rememberable? -%>
    <fieldset class="form-group">
      <%= form.check_box :remember_me %>
      <%= form.label :remember_me %>
    </fieldset>
  <% end -%>

  <div class="actions">
    <%= form.submit "Log in", class: "btn btn-primary width-hundred-percent" %>
  </div>
<% end %>

<%= render "users/shared/links" %>

</div>
<div class="modal-footer">
  <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
</div>